<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#27A126</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#27A126</item>
    </style>

    <style name="question">
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#781C72</item>
    </style>

    <style name="radioGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="answer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">"@font/ubuntu"</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="beforeEditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">20sp</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#781C72</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ubuntu</item>
        <item name="android:inputType">text</item>
        <item name="android:textColor">#781C72</item>
    </style>

    <style name="afterEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:fontFamily">@font/ubuntu_medium</item>
        <item name="android:textColor">#781C72</item>
    </style>
</resources>
